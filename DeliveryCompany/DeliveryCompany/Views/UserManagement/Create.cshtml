@using DeliveryCompany.Models.ViewModels;
@model UserCreationVM

@{
    ViewData["Title"] = "Create User";
}

<div class="row d-flex align-items-center justify-content-center">
    <div class="p-3">
        <h2 class="text-center text-primary">Create User</h2>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="mb-1">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-1">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" id="roleSelect">
                    <option value="">Select Role</option>
                    @foreach (var role in typeof(Constants.Authentification.UserRoles).GetFields())
                    {
                        if (role.IsLiteral)
                        {
                            <option value="@role.GetValue(null).ToString()">@role.GetValue(null).ToString()</option>
                        }
                    }
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-8">
                    <a asp-action="Index" class="text-info text-decoration-none float-start mt-2">
                        <i class="bi bi-arrow-left"></i> Back to User Management
                    </a>
                </div>
                <div class="col-4">
                    <input type="submit" value="Create" class="btn btn-primary btn-sm float-end mt-1" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
}
